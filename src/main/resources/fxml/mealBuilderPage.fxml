<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="1000" styleClass="root-pane" stylesheets="@../css/mealBuilder.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group4.macromanager.controller.MealBuilderController">

    <!-- Sidebar -->
    <left>
        <fx:include fx:id="sidebarInclude" source="./sidebar.fxml" />
    </left>

    <!-- Center Content -->
    <center>
        <VBox alignment="TOP_LEFT" spacing="20" styleClass="main-content">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Title -->
            <Label styleClass="page-title" text="Meal Builder" />

            <HBox alignment="TOP_LEFT" spacing="20">
                <!-- Left Column -->
                <VBox alignment="TOP_LEFT" spacing="20" HBox.hgrow="ALWAYS">

                    <!-- Meal Info Card -->
                    <VBox spacing="10" styleClass="form-card">
                        <Label styleClass="section-title" text="Meal Info" />
                        <GridPane hgap="20" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints halignment="LEFT" prefWidth="120" />
                                <ColumnConstraints halignment="LEFT" prefWidth="250" />
                            </columnConstraints>

                            <Label styleClass="input-label" text="Meal Type:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <ComboBox fx:id="mealTypeCombo" minHeight="-Infinity" promptText="Breakfast" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Breakfast" />
                                        <String fx:value="Lunch" />
                                        <String fx:value="Dinner" />
                                        <String fx:value="Snack" />
                                    </FXCollections>
                                </items>
                            </ComboBox>

                            <Label styleClass="input-label" text="Meal Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <TextField fx:id="mealNameField" minHeight="-Infinity" promptText="e.g. Steak and Potatoes" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label styleClass="input-label" text="Notes (Optional):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <TextField fx:id="notesField" minHeight="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>

                        </GridPane>
                    </VBox>

                    <!-- Add Foods Card -->
                    <VBox spacing="10" styleClass="form-card">
                        <Label styleClass="section-title" text="Add Foods" />

                        <HBox spacing="10">
                            <TextField fx:id="searchFoodField" minHeight="-Infinity" promptText="Search/Add Food" HBox.hgrow="ALWAYS" />
                            <Button onAction="#handleAddFood" styleClass="primary-button" text="Add" />
                        </HBox>

                        <ListView fx:id="foodsListView" prefHeight="200" />

                        <Button onAction="#handleClearFoods" styleClass="secondary-button" text="Clear Foods" />
                    </VBox>
                </VBox>

                <!-- Right Column -->
                <VBox alignment="TOP_CENTER" prefWidth="300" spacing="20" HBox.hgrow="NEVER">

                    <!-- Macro Totals Card -->
                    <VBox spacing="10" styleClass="side-card">
                        <Label styleClass="section-title" text="Macro Totals" />
                        <Label fx:id="caloriesLabel" text="Calories: 0" />
                        <Label fx:id="proteinLabel" text="Protein (g): 0" />
                        <Label fx:id="carbsLabel" text="Carbs (g): 0" />
                        <Label fx:id="fatLabel" text="Fats (g): 0" />
                    </VBox>

                    <!-- Additional Info Card -->
                    <VBox spacing="10" styleClass="side-card">
                        <Label styleClass="section-title" text="Additional Info" />
                        <CheckBox fx:id="favoriteCheckBox" text="Add to Favorites" />
                        <VBox alignment="CENTER" minWidth="-Infinity" prefHeight="137.0" prefWidth="180.0" spacing="10">
                            <ImageView fx:id="foodImage" fitHeight="100" fitWidth="100" preserveRatio="true" style="-fx-background-color: rgba(255,255,255,0.1); -fx-border-color: #666; -fx-border-radius: 10; -fx-background-radius: 10;" />
                            <Button fx:id="uploadButton" onAction="#handleUpload" styleClass="upload-button" text="Upload Image" />
                        </VBox>
                    </VBox>

                    <!-- Save/Cancel -->
                    <HBox alignment="CENTER" spacing="10">
                        <Button fx:id="saveButton" onAction="#handleSave" styleClass="primary-button" text="Save" />
                        <Button fx:id="cancelButton" onAction="#handleCancel" styleClass="secondary-button" text="Cancel" />
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
