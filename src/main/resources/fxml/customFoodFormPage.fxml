<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600" prefWidth="1000" styleClass="root-pane" stylesheets="@../css/customFoods.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group4.macromanager.controller.CustomFoodFormController">

    <!-- Sidebar -->
    <left>
        <fx:include fx:id="sidebarInclude" source="./sidebar.fxml" />
    </left>

    <!-- Main Custom Food Form Content -->
    <center>
        <VBox alignment="TOP_LEFT" spacing="20" styleClass="main-content">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Page Title -->
            <Label prefWidth="481.0" styleClass="page-title" text="Add Custom Food">
            <font>
               <Font name="System Bold" size="24.0" />
            </font></Label>

            <!-- Two column layout -->
            <HBox alignment="TOP_LEFT" spacing="20">
                <!-- Left Side -->
                <VBox alignment="TOP_LEFT" spacing="20" styleClass="form-card" HBox.hgrow="ALWAYS">
                    <Label styleClass="section-title" text="Main Info" />

                    <GridPane alignment="CENTER_LEFT" hgap="20" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints halignment="LEFT" percentWidth="20" />
                            <ColumnConstraints halignment="LEFT" percentWidth="80" />
                        </columnConstraints>

                        <Label styleClass="input-label" text="Food Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="nameField" promptText="e.g., Oatmeal" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label styleClass="input-label" text="Serving Size:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <TextField fx:id="servingField" prefWidth="120" promptText="e.g., 100" />
                            <ComboBox fx:id="unitComboBox" prefWidth="120" promptText="grams">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="grams" />
                                        <String fx:value="ounces" />
                                        <String fx:value="cups" />
                                        <String fx:value="pieces" />
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>

                        <Label styleClass="input-label" text="Calories:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="caloriesField" promptText="e.g., 120" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label styleClass="input-label" text="Protein (g):" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="proteinField" promptText="e.g., 5" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label styleClass="input-label" text="Carbs (g):" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="carbsField" promptText="e.g., 20" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label styleClass="input-label" text="Fat (g):" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <TextField fx:id="fatField" promptText="e.g., 2" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>

                    <HBox alignment="CENTER" spacing="15">
                        <Button fx:id="saveButton" onAction="#handleSave" styleClass="primary-button" text="Save" />
                        <Button fx:id="cancelButton" onAction="#handleCancel" styleClass="secondary-button" text="Cancel" />
                    </HBox>
                </VBox>

                <!-- Right Side -->
                <VBox alignment="TOP_CENTER" spacing="20" styleClass="side-card" HBox.hgrow="NEVER">
                    <Label styleClass="section-title" text="Additional Info" />

                    <VBox alignment="TOP_LEFT" spacing="10">
                        <CheckBox fx:id="favoriteCheckBox" text="Add to Favorites" />
                    </VBox>

                    <VBox alignment="CENTER" minWidth="-Infinity" prefHeight="137.0" prefWidth="180.0" spacing="10">
                        <ImageView fx:id="foodImage" fitHeight="100" fitWidth="100" preserveRatio="true" style="-fx-background-color: rgba(255,255,255,0.1); -fx-border-color: #666; -fx-border-radius: 10; -fx-background-radius: 10;" />
                        <Button fx:id="uploadButton" onAction="#handleUpload" styleClass="upload-button" text="Upload Image" />
                    </VBox>
                </VBox>
            </HBox>

        </VBox>
    </center>

</BorderPane>
